# ImageShare Production Configuration
# Copy this file to .env for production deployment

###> symfony/framework-bundle ###
APP_ENV=prod
APP_DEBUG=false
APP_SECRET=CHANGE_THIS_TO_A_SECURE_32_CHARACTER_SECRET_KEY
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Production database configuration
DATABASE_URL=mysql://username:password@host:port/database_name?serverVersion=10.11
###< doctrine/doctrine-bundle ###

###> symfony/mailer ###
# Production email configuration
# Examples:
# Gmail: MAILER_DSN=gmail://username:password@default
# SendGrid: MAILER_DSN=sendgrid://KEY@default
# SMTP: MAILER_DSN=smtp://username:password@smtp.example.com:587
MAILER_DSN=smtp://username:password@smtp.example.com:587
###< symfony/mailer ###

### ImageShare Production Configuration

# Frontend URL - CRITICAL: Update this for your production domain
FRONTEND_URL=https://yourdomain.com

# Directory where images are stored (relative to project root)
IMAGES_DIRECTORY=images

# Maximum file upload size (in MB)
MAX_FILE_SIZE=10

# Allowed image formats
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,gif,webp

# Security Configuration
TRUSTED_PROXIES=127.0.0.1,REMOTE_ADDR

# Session Configuration (enable for HTTPS)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=lax

# Production Settings
DEBUG=false
LOG_LEVEL=error

# Email Configuration
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME="ImageShare"

# Optional: CDN Configuration
# CDN_URL=https://cdn.yourdomain.com

# Optional: Redis Configuration for sessions/cache
# REDIS_URL=redis://localhost:6379