{% extends 'base.html.twig' %}

{% block title %}Share Image - ImageShare{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-share text-primary me-2"></i>Share Image: {{ image.title }}
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Image Preview -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <img src="{{ image.imageUrl }}" alt="{{ image.title }}" class="img-fluid rounded">
                        </div>
                        <div class="col-md-8">
                            <h5>{{ image.title }}</h5>
                            {% if image.description %}
                                <p class="text-muted">{{ image.description }}</p>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Share Form -->
                    <form method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('share-image') }}">

                        <div class="mb-3">
                            <label for="usernames" class="form-label">Share with Users</label>
                            <input type="text" class="form-control" id="usernames" name="usernames"
                                   placeholder="Enter usernames separated by commas (e.g. user1, user2, user3)">
                            <div class="form-text">
                                Enter the usernames of users you want to share this image with.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="message" class="form-label">Message (Optional)</label>
                            <textarea class="form-control" id="message" name="message" rows="3"
                                      placeholder="Add a personal message..."></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_image_show', {'id': image.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Image
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-share me-1"></i>Share Image
                            </button>
                        </div>
                    </form>

                    <!-- Currently Shared With -->
                    {% if shared_users is not empty %}
                        <div class="mt-4">
                            <h5>Currently Shared With:</h5>
                            <div class="row">
                                {% for user in shared_users %}
                                    <div class="col-md-6 mb-2">
                                        <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
                                            <span>
                                                <i class="fas fa-user me-2"></i>{{ user.username }}
                                            </span>
                                            <a href="{{ path('app_share_remove_image', {'image': image.id, 'user': user.id}) }}"
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Remove share with {{ user.username }}?')">
                                                <i class="fas fa-times"></i>
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    <!-- Available Users -->
                    {% if available_users is not empty %}
                        <div class="mt-4">
                            <h6>All Users (for reference):</h6>
                            <div class="row">
                                {% for user in available_users %}
                                    <div class="col-md-4 mb-1">
                                        <small class="text-muted">{{ user.username }}</small>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
