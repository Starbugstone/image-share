{% extends 'base.html.twig' %}

{% block title %}{{ profile_user.username }}'s Profile{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">
                        <i class="fas fa-user me-2"></i>{{ profile_user.username }}'s Profile
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Profile Information</h5>
                            <ul class="list-unstyled">
                                <li><strong>Username:</strong> {{ profile_user.username }}</li>
                                <li><strong>Member since:</strong> {{ profile_user.createdAt|date('F j, Y') }}</li>
                                <li><strong>Status:</strong> 
                                    {% if profile_user.isVerified %}
                                        <span class="badge bg-success">Verified</span>
                                    {% else %}
                                        <span class="badge bg-warning">Unverified</span>
                                    {% endif %}
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5>Quick Actions</h5>
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" onclick="openQuickShareModal('user', {{ profile_user.id }}, '{{ profile_user.username }}')">
                                    <i class="fas fa-share-alt me-2"></i>Share Something
                                </button>
                                <a href="{{ path('app_dashboard_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
