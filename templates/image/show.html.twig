{% extends 'base.html.twig' %}

{% block title %}{{ image.title }} - ImageShare{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <!-- Image Display -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-0">
                    <img src="{{ image.imageUrl }}" alt="{{ image.title }}" class="img-fluid rounded">
                </div>
            </div>
        </div>

        <!-- Image Info and Actions -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">{{ image.title }}</h5>
                </div>
                <div class="card-body">
                    {% if image.description %}
                        <p class="text-muted">{{ image.description }}</p>
                    {% endif %}

                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="fas fa-calendar me-1"></i>Uploaded: {{ image.createdAt|date('F j, Y \a\t g:i A') }}<br>
                            <i class="fas fa-user me-1"></i>By: {{ image.user.username }}<br>
                            {% if image.album %}
                                <i class="fas fa-folder me-1"></i>Album: {{ image.album.name }}<br>
                            {% endif %}
                            <i class="fas fa-file me-1"></i>Size: {{ (image.imageSize / 1024 / 1024)|round(2) }} MB
                        </small>
                    </div>

                    {% if image.user == app.user %}
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_image_edit', {'id': image.id}) }}" class="btn btn-primary">
                                <i class="fas fa-edit me-1"></i>Edit Image
                            </a>
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash me-1"></i>Delete Image
                            </button>
                            <a href="{{ path('app_share_image', {'id': image.id}) }}" class="btn btn-success">
                                <i class="fas fa-share me-1"></i>Share Image
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-comments me-1"></i>Comments
                    </h6>
                </div>
                <div class="card-body">
                    {% if image.comments is empty %}
                        <p class="text-muted">No comments yet.</p>
                    {% else %}
                        {% for comment in image.comments %}
                            {% if comment.isVisibleTo(app.user) %}
                                <div class="comment mb-3 p-3 bg-light rounded">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <strong>{{ comment.author.username }}</strong>
                                        <small class="text-muted">{{ comment.createdAt|date('M j, Y g:i A') }}</small>
                                    </div>
                                    <p class="mb-0 mt-2">{{ comment.content }}</p>
                                </div>
                            {% endif %}
                        {% endfor %}
                    {% endif %}

                    <form method="post" action="{{ path('app_comment_add', {'type': 'image', 'id': image.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('add-comment') }}">
                        <div class="mb-3">
                            <textarea class="form-control" name="content" rows="3" placeholder="Add a comment..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-paper-plane me-1"></i>Comment
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
{% if image.user == app.user %}
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Image</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this image? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" action="{{ path('app_image_delete', {'id': image.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
