{% extends 'base.html.twig' %}

{% block title %}My Shares - ImageShare{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2>
                <i class="fas fa-share text-primary me-2"></i>My Shares
            </h2>
            <p class="text-muted">Manage your shared images and albums.</p>
        </div>
    </div>

    <!-- Shared By Me -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-share-square text-success me-2"></i>Shared By Me
                    </h4>
                </div>
                <div class="card-body">
                    {% if shared_by_me is empty %}
                        <div class="text-center py-4">
                            <i class="fas fa-share fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Items Shared Yet</h5>
                            <p class="text-muted">Share your images and albums with other users to see them here.</p>
                            <a href="{{ path('app_dashboard_images') }}" class="btn btn-primary">
                                <i class="fas fa-images me-1"></i>Go to Images
                            </a>
                        </div>
                    {% else %}
                        <div class="row">
                            {% for share in shared_by_me %}
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-3">
                                                    {% if share.image %}
                                                        <img src="{{ share.image.imageUrl }}" alt="{{ share.image.title }}"
                                                             class="img-fluid rounded">
                                                    {% else %}
                                                        {% set firstImage = share.album.images.first %}
                                                        {% if firstImage %}
                                                            <img src="{{ firstImage.imageUrl }}" alt="{{ share.album.name }}"
                                                                 class="img-fluid rounded">
                                                        {% else %}
                                                            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 60px;">
                                                                <i class="fas fa-folder text-muted"></i>
                                                            </div>
                                                        {% endif %}
                                                    {% endif %}
                                                </div>
                                                <div class="col-9">
                                                    <h6 class="card-title mb-1">
                                                        {% if share.image %}
                                                            <i class="fas fa-image text-info me-1"></i>{{ share.image.title }}
                                                        {% else %}
                                                            <i class="fas fa-folder text-warning me-1"></i>{{ share.album.name }}
                                                        {% endif %}
                                                    </h6>
                                                    <p class="card-text small text-muted mb-2">
                                                        Shared with: <strong>{{ share.sharedWith.username }}</strong><br>
                                                        {% if share.message %}
                                                            Message: "{{ share.message }}"<br>
                                                        {% endif %}
                                                        Date: {{ share.sharedAt|date('M j, Y g:i A') }}
                                                    </p>
                                                    <div class="btn-group btn-group-sm">
                                                        {% if share.image %}
                                                            <a href="{{ path('app_image_show', {'id': share.image.id}) }}"
                                                               class="btn btn-outline-primary">View</a>
                                                        {% else %}
                                                            <a href="{{ path('app_album_show', {'id': share.album.id}) }}"
                                                               class="btn btn-outline-primary">View</a>
                                                        {% endif %}
                                                        <a href="{{ path('app_share_remove_' ~ (share.image ? 'image' : 'album'),
                                                                       {'image': share.image ? share.image.id : null,
                                                                        'album': share.album ? share.album.id : null,
                                                                        'user': share.sharedWith.id}) }}"
                                                           class="btn btn-outline-danger"
                                                           onclick="return confirm('Stop sharing with {{ share.sharedWith.username }}?')">
                                                            Stop Sharing
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Shared With Me -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-inbox text-info me-2"></i>Shared With Me
                    </h4>
                </div>
                <div class="card-body">
                    {% if shared_with_me is empty %}
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Items Shared With You</h5>
                            <p class="text-muted">When other users share images or albums with you, they will appear here.</p>
                        </div>
                    {% else %}
                        <div class="row">
                            {% for share in shared_with_me %}
                                <div class="col-md-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-3">
                                                    {% if share.image %}
                                                        <img src="{{ share.image.imageUrl }}" alt="{{ share.image.title }}"
                                                             class="img-fluid rounded">
                                                    {% else %}
                                                        {% set firstImage = share.album.images.first %}
                                                        {% if firstImage %}
                                                            <img src="{{ firstImage.imageUrl }}" alt="{{ share.album.name }}"
                                                                 class="img-fluid rounded">
                                                        {% else %}
                                                            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 60px;">
                                                                <i class="fas fa-folder text-muted"></i>
                                                            </div>
                                                        {% endif %}
                                                    {% endif %}
                                                </div>
                                                <div class="col-9">
                                                    <h6 class="card-title mb-1">
                                                        {% if share.image %}
                                                            <i class="fas fa-image text-info me-1"></i>{{ share.image.title }}
                                                        {% else %}
                                                            <i class="fas fa-folder text-warning me-1"></i>{{ share.album.name }}
                                                        {% endif %}
                                                    </h6>
                                                    <p class="card-text small text-muted mb-2">
                                                        Shared by: <strong>{{ share.sharedBy.username }}</strong><br>
                                                        {% if share.message %}
                                                            Message: "{{ share.message }}"<br>
                                                        {% endif %}
                                                        Date: {{ share.sharedAt|date('M j, Y g:i A') }}
                                                    </p>
                                                    <div class="btn-group btn-group-sm">
                                                        {% if share.image %}
                                                            <a href="{{ path('app_image_show', {'id': share.image.id}) }}"
                                                               class="btn btn-outline-primary">View</a>
                                                        {% else %}
                                                            <a href="{{ path('app_album_show', {'id': share.album.id}) }}"
                                                               class="btn btn-outline-primary">View</a>
                                                        {% endif %}
                                                        <a href="{{ path('app_comment_add', {'type': 'share', 'id': share.id}) }}"
                                                           class="btn btn-outline-success">Comment</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Dashboard -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>
</div>
{% endblock %}
