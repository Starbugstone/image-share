{% extends 'base.html.twig' %}

{% block title %}My Albums - ImageShare{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="fas fa-folder text-primary me-2"></i>My Albums
                </h2>
                <a href="{{ path('app_album_create') }}" class="btn btn-primary">
                    <i class="fas fa-folder-plus me-1"></i>Create Album
                </a>
            </div>
        </div>
    </div>

    <!-- Albums Grid -->
    {% if albums is empty %}
        <div class="row">
            <div class="col-12">
                <div class="card text-center">
                    <div class="card-body py-5">
                        <i class="fas fa-folder fa-4x text-muted mb-3"></i>
                        <h3 class="card-title">No Albums Yet</h3>
                        <p class="card-text text-muted">Create your first album to organize your images.</p>
                        <a href="{{ path('app_album_create') }}" class="btn btn-primary">
                            <i class="fas fa-folder-plus me-1"></i>Create Your First Album
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            {% for album in albums %}
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100">
                        {% if album.images|length > 0 %}
                            {% set firstImage = album.images.first %}
                            <div class="card-img-container" style="height: 200px; overflow: hidden;">
                                <img src="{{ firstImage.imageUrl }}" alt="{{ album.name }}" class="card-img-top" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                        {% else %}
                            <div class="card-img-container bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-folder fa-4x text-muted"></i>
                            </div>
                        {% endif %}

                        <div class="card-body">
                            <h6 class="card-title">{{ album.name }}</h6>
                            {% if album.description %}
                                <p class="card-text text-muted small">{{ album.description|length > 100 ? album.description|slice(0, 100) ~ '...' : album.description }}</p>
                            {% endif %}

                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-images me-1"></i>{{ album.images|length }} images
                                </small>
                                {% if album.isPublic %}
                                    <span class="badge bg-success">Public</span>
                                {% else %}
                                    <span class="badge bg-secondary">Private</span>
                                {% endif %}
                            </div>

                            <div class="btn-group btn-group-sm w-100">
                                <a href="{{ path('app_album_show', {'id': album.id}) }}" class="btn btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>View
                                </a>
                                <a href="{{ path('app_album_edit', {'id': album.id}) }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <a href="{{ path('app_share_album', {'id': album.id}) }}" class="btn btn-outline-success">
                                    <i class="fas fa-share me-1"></i>Share
                                </a>
                                <button type="button" class="btn btn-outline-info" 
                                        onclick="openQuickShareModal('album', {{ album.id }}, '{{ album.name|escape('js') }}')">
                                    <i class="fas fa-bolt me-1"></i>Quick
                                </button>
                            </div>
                        </div>

                        <div class="card-footer">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>{{ album.createdAt|date('M j, Y') }}
                            </small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <!-- Back to Dashboard -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>
</div>

<!-- Include Quick Share Modal -->
{% include 'components/quick_share_modal.html.twig' %}
{% endblock %}
