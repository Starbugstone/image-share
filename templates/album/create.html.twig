{% extends 'base.html.twig' %}

{% block title %}Create Album - ImageShare{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-folder-plus text-primary me-2"></i>Create New Album
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="mb-3 form-check">
                            {{ form_widget(form.isPublic, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.isPublic, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(form.isPublic) }}
                            <div class="form-text">
                                Public albums can be viewed by anyone with the link. You can still share private albums with specific users.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-folder-plus me-1"></i>Create Album
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
